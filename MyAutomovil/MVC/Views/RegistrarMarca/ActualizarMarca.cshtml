@model Fachada.ActualizarMarcaViewModel

<!DOCTYPE html>

<head>
    <title>Actualizar marca</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
    <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/styles.css" rel="stylesheet" type="text/css" />
</head>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<body style="background-color: #ffffff">
    <nav class="navbar navbar-expand-md  navbar-dark" style="background-color: rgb(0, 0, 0);">
        <a class="navbar-brand" href="#">Registrar marca</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="#">Link</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Link</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Link</a>
                </li>
            </ul>
        </div>
    </nav>
    <br />
    <br />
    <div class="container">
        <div>
            <div class="row">
                <div class="col-sm-12" align="center">
                    <h2>Actualizar marca</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3"></div>
                <div class="col-sm-6">
                    <form class="form-horizontal">
                        <fieldset>
                            <div class="form-group">
                                <label class="col-md-4 control-label" for="nombreMarca">Nombre</label>
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="col-sm-12">
                                    @Html.EditorFor(model => model.nombreMarca, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.nombreMarca, "", new { @class = "text-danger" })
                                </div>
                                @{
                                    if (@ViewData["MensajeMarca"] != null)
                                    {
                                        <p class="alert alert-danger"> @ViewData["MensajeMarca"]</p>
                                    }
                                }
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label class="col-md-4 control-label" for="paisMarca">Pais</label>
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="col-sm-12">
                                    @Html.EditorFor(model => model.pais, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.pais, "", new { @class = "text-danger" })
                                </div>
                                @{
                                    if (@ViewData["MensajePais"] != null)
                                    {
                                        <p class="alert alert-danger"> @ViewData["MensajePais"]</p>
                                    }
                                }
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            </div>
                        </fieldset>
                        <br />
                        <br />
                        <div class="row">
                            <input type="submit" class="btn btn-success col-md-4" value="Guardar" />
                            <div class="col-md-4"><br /></div>
                            <button type="button" class="btn btn-danger col-md-4 ">@Html.ActionLink("Cancelar", "ConsultarMarca", null, new { @class = "myclass" })</button>
                        </div>
                    </form>
                </div>
                <div class="col-sm-3"></div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            @{
                if (@ViewData["MensajeError"] != null)
                {
                    <p class="alert alert-danger"> @ViewData["MensajeError"]</p>
                }
            }
        </div>
    </div>
    <div class="col-sm-3"></div>
</body>
        <br />
        <br />
        <footer class="footer" style="background-color: #000000; color: #fafafa">
            <div>
                <br />
                <br />
                <p>© WYMAN SOLUTION 2019</p>
                <br />
                <br />
            </div>
        </footer>
    
}