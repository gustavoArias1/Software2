@model Fachada.IndexViewModel



<!DOCTYPE html>
<head>
    <title>Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link href="~/css/styles.css" rel="stylesheet" type="text/css" />
</head>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <body>
        <div class="jumbotron  jumbotron-fluid" align="center" style="border: 1px dashed rgb(66, 133, 244); background-color: rgb(0, 0, 0);">
            <h1 class="display-3" style="color: rgb(255, 255, 255); font-family: Comic Sans MS, cursive, sans-serif;" contenteditable="false" spellcheckker="false">MI AUTOMÓVIL</h1>
        </div>
        <div class="container">
            <div align="center">
                <h2> Login</h2>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-6">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label>Usuario</label>
                    @Html.EditorFor(model => model.user, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.user, "", new { @class = "text-danger" })
                </div>
                @{
                    if (@ViewData["MensajeUsuario"] != null)
                    {
                        <p class="alert alert-danger"> @ViewData["MensajeUsuario"]</p>
                    }
                }
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label>Contraseña</label>
                    @Html.EditorFor(model => model.contraseña, new { htmlAttributes = new { @class = "form-control" , @type = "password" } })
                    @Html.ValidationMessageFor(model => model.contraseña, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.ActionLink("¿Olvidaste tu contraseña?", "RecuperarContraseña")
                </div>
            </div>
            <div class="col-sm-3"></div>
            <div class="container" style="">
                <div class="row">
                    <div class="col-sm-3"></div>
                    <input type="submit" value="Ingresar" class="btn btn-dark col-sm-2" />
                    <div class="col-sm-2"><br /></div>
                    <botton onclick="window.location.href='/RegistarCliente/AdicionarCliente'" class="btn btn-dark col-sm-2">Registrarse</botton>
                    <div class="col-sm-3"></div>
                </div>
            </div>
        </div>
        <br />
        <br />
        <<div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-6">
                @{
                    if (@ViewData["MensajeLogueo"] != null)
                    {
                        <p class="alert alert-danger"> @ViewData["MensajeLogueo"]</p>
                    }
                }
            </div>
        </div>
        <div class="col-sm-3"></div>
    </body>
    <br />
    <br />
    <br />
    <footer class="footer" style="background-color : #000000; color:#ffffff">
        <br />
        <br />
        <p>© WYMAY SOLUTIONS 2019</p>
        <br />
        <br />
    </footer>
}
