
@{
    Layout = null;
}

<!DOCTYPE html>
<head>
    <title>Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

</head>
<body>
    <nav class="navbar navbar-expand-md  navbar-dark" style="background-color: rgb(0, 0, 0);">
        <a class="navbar-brand" href="#">Registrar cliente</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="#">Link</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Link</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Link</a>
                </li>
            </ul>
        </div>
    </nav>
    <br>
    <br>
    <div class="container">
        <div class="row">
            <div align="center" class="col-sm-12">
                <h2> Consultar Cliente</h2>
            </div>
        </div>
    </div>
    <br>
    <br>
    <div class="container">
        <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-sm-6">
                @using (Ajax.BeginForm( "ConsultarClienteF", new AjaxOptions()
                {
                    HttpMethod = "POST",
                    InsertionMode = InsertionMode.Replace,
                    UpdateTargetId = "contenedorClientes"
                }))
                { 
                <form class="form-inline" method="post">
                    <input class="form-control mb-2 mr-sm-2" placeholder="Ingrese su consulta " size="40" name="consultaCliente"/>
                    <button type="submit" class="btn btn-success mb-2 ">
                        <span class="fi-icon-name" title="icon name" aria-hidden="true"></span>Consultar
                    </button>
                </form>
                }
            </div>
            <div class="col-sm-4 btn-group-inline">
                <button type="button" class="btn btn-dark mb-2 ">@Ajax.ActionLink("Listar Todos", "ConsultarClienteF", new AjaxOptions()
                                                            {
                                                                HttpMethod = "GET",
                                                                InsertionMode = InsertionMode.Replace,
                                                                UpdateTargetId = "contenedorClientes",
                                                            })</button>
                <button type="button" class="btn btn-success mb-2 ">@Html.ActionLink("Adicionar", "AdicionarCliente", null, new { @class = "myclass" })</button>
            </div>
        </div>
    </div>
    <div class="container" id="contenedorClientes">

    </div>
    <br />
    <br />
    <footer class="footer" style="background-color: #000000; color: #fafafa">
        <div>
            <br />
            <br />
            <p>© WYMAN SOLUTION 2019</p>
        </div>
    </footer>
</body>
</html>


