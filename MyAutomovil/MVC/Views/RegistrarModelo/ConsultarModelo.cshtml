    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link href="~/css/styles.css" rel="stylesheet" type="text/css" />

</head>
<body>
    <div class="jumbotron  jumbotron-fluid" align="center" style="border: 1px dashed rgb(66, 133, 244);background-color: rgb(0, 0, 0);">
        <h1 class="display-3" style="color: rgb(255, 255, 255); font-family: Comic Sans MS,cursive, sans-serif;" contenteditable="false" spellcheckker="false">MI AUTOMÓVIL</h1>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-sm-12" id="contenedorMenu">
            </div>
        </div><!--contenedor del menu-->
        <div class="row">
            <br>
            <br>
            <div align="center" class="col-sm-12">
                <h2> Consultar Modelo</h2>
            </div>
        </div>
    </div> <!-- /container -->
    <div class="container">
        <br />
        <br />
        <div class="row">
            <div class="col-sm-1"></div>
            <div class="col-sm-5">
                <form class="form-inline">
                    <input class="form-control mb-2 mr-sm-2" placeholder="Ingrese su consulta " size="40" />
